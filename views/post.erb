<h1>Post</h1>
<h2><%= @profile.user.username %></h2>

<form class="postform" action="/create-post" method="post">
  <textarea name="content" rows="8" cols="30" maxlength="150"></textarea>
  <br>
  <button type="submit" name="button">post</button>
</form>

<div class="postpageposts">
  <% @posts.reverse.each do |post| %>
  <div class="postpagedate">  <%= post.date %> </div>
  <div class="postpagestuff"> <%= post.content %> </div>
  <div class="editpostbutts">
    <span>
      <a class="editpostbutton" href="/edituserpost/<%=post.id%>"><i class="material-icons">create</i></a>
    </span>
    <span>
      <a class="editpostbutton" href="/delete-post/<%=post.id%>"> <i class="material-icons">delete</i></a>
    </span>
</div>


  <% end %>
</div>
